<p id="notice">
  <%= notice %>
</p>

<h1 style="margin-bottom: 2%;">Listing Products</h1>

<div class="table-responsive">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th style="text-align: center;">Name</th>
        <th style="text-align: center;">Description</th>
        <th style="text-align: center;">Image url</th>
        <th style="text-align: center;">Color</th>
        <th style="text-align: center;">Price</th>
        <th colspan="4"></th>
      </tr>
    </thead>
    <tbody>
      <% cache(cache_key_for_products) do %>
        <%= render @products %>
      <% end %>
    </tbody>
  </table>
</div>

<br>
<div class="btn bt-md btn-default">
  <%= link_to 'Add a product', new_product_path, style: "text-decoration: none;" %>
</div>
<hr>
<div class="btn btn-default" >
  <%= link_to  "Orders", "/orders", style: "text-decoration: none;" %>
</div>