<% cache product do %>
	<tr>
	    <td style="text-align: center">
	    	<%= product.name %>
	    </td>
	    <td style="text-align: center">
	    	<%= product.description %>
	    </td>
	    <td style="text-align: center">
	    	<%= image_tag(product.image_url, class: "image1") %>
		</td>
	    <td style="text-align: center">
	    	<%= product.color %>
	    </td>
	    <td style="text-align: center">
	    	<%= number_to_currency(product.price) %>
	    </td>
	    <td style="text-align: center">
	    	<%= link_to 'Show', product, class: "btn btn-default" %>
	    </td>
	    <td style="text-align: center">
	    	<%= link_to 'Edit', edit_product_path(product), class: "btn btn-default" %>
	    </td>
	    <td style="text-align: center">
	    	<%= link_to 'Destroy', product, method: :delete, data_confirm: 'Are you sure?', class: "btn btn-default"  %>
	    </td>
	</tr>
<% end %>