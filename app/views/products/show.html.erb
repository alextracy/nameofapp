<p id="notice"><%= notice %></p>
	<div class="well">
		<p>
		  <%= image_tag(@product.image_url, class: 'image')%>
		</p>

		<div class="productdetails">
			<div class="detailbox">
			<p>
			  <strong>Name:</strong>
			  <%= @product.name %>
			</p>

			<p>
			  <strong>Description:</strong>
			  <%= @product.description %>
			</p>
			<p>
			  <strong>Color:</strong>
			  <%= @product.color %>
			</p>
			<strong style="float:left; margin-right:5px">Average Rating:</strong><div class="rated" data-score="<%= @product.average_rating %>"></div> 
			
			<p style="clear:left; margin-top: 30px"> 
			 <strong>Price: $<%= @product.price %></strong>
			</p>
			<%= form_tag "/payments/create" do %>
			 	<%= render partial: "shared/stripe_checkout_button" %>
			 <% end %>
			</div>
		</div>
	</div>

	
	<div class="col-md-6 comments" style="padding: 0; float: none;">
	    	<div class="well well1">
			<%= render 'new_comment' %>
			<% @comments.each do |comment| %>
				
					<hr/>
					<p><%= comment.user.first_name %> <small><em><%= "#{time_ago_in_words(comment.created_at)} ago" %></em></small>
						<% if signed_in? && current_user.admin? %>
							<%= link_to ('<span class="glyphicon glyphicon-remove"></span>').html_safe, product_comment_path(@product, comment), method: :delete, data: { confirm: 'Are you sure?' } %>
						<% end %>
					</p>

					<p><%= "Rating: #{comment.rating}/5" %></p>
					<p><%= comment.body %></p>
				

			<% end %>
			<div style="text-align: center">
				<%= will_paginate @comments, renderer: BootstrapPagination::Rails %>
			</div>
		</div>
	</div>
	
	<div style="margin-top: 5%">
		<%= link_to 'Edit', edit_product_path(@product) %> |
		<%= link_to 'Back', products_path %>
	</div>