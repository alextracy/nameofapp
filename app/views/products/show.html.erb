<p id="notice"><%= notice %></p>
<div class="container">

<p class="productdetails">
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p class="productdetails">
  <strong>Description:</strong>
  <%= @product.description %>
</p>
<p class="productdetails">
  <strong>Color:</strong>
  <%= @product.color %>
</p>
<p class="productdetails">Average Rating: 
	<div class="rated" data-score="<%= @product.average_rating %>">
	</div> 
</p>
<p>
  <%= image_tag(@product.image_url, class: 'image')%>
</p>
<%= render 'new_comment' %>
<div class="product-reviews">
	<% @comments.each do |comment| %>
	<div class="row">
		<hr>
		<p><%= comment.user.first_name %> <small><em><%= "#{time_ago_in_words(comment.created_at)} ago" %></em></small><p>
			<p ><%= "Rating: #{comment.rating}/5" %></p>
			<p><%= comment.body %></p>
		</div>
	<% end %>
</div>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>

</div>