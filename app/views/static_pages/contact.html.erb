<h1 style="text-align: center;">Contact Us</h1>
<%= flash[:notice] %>
<hr>
<%= form_tag("/static_pages/thank_you", style: "autocorrect=off, autocapitalize=words") do %>
	<div class="form-group">
		<%= label_tag :name, "Name" %>
		<%= text_field_tag :name, nil, class: "form-control", placeholder: "Enter Name" %>
	</div>
	<div class="form-group">
		<%= label_tag :email, "Email Address" %>
		<%= text_field_tag :email, nil, type: "email",class: "form-control", placeholder: "Enter Email" %>
	</div>
	<div class="form-group">
		<%= label_tag :message, "Message" %>
		<%= text_field_tag :message, nil, class: "form-control", placeholder: "Enter Message" %>
	</div>

	<%= submit_tag "Send",:class=>'btn btn-lg btn-primary btn-block', :style => "background-color: #2ecc71;" %>
<% end %>

